<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c3_2"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ivLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:src="@drawable/nav_setting" />

        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:src="@drawable/nav_setting" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal" >

                <RelativeLayout android:gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/imagView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cloudy" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imagView1"
                        android:layout_toRightOf="@id/imagView1"
                        android:text="23℃"
                        android:textColor="@color/white"
                        android:textSize="83sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/imagView1"
                        android:layout_toLeftOf="@+id/textView1"
                        android:gravity="center_horizontal"
                        android:text="天气：多云"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView1"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/imagView1"
                        android:gravity="center_horizontal"
                        android:text="20~10°"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </RelativeLayout>
            </TableRow>
             <TableRow
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal" >

                <RelativeLayout android:gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/imagView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jacket" />

                    <ImageView
                        android:id="@+id/imagView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imagView6"
                        android:layout_toRightOf="@id/imagView2"
                        android:src="@drawable/drop"
                       />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/imagView2"
                        android:layout_toLeftOf="@+id/textView5"
                        android:gravity="center_horizontal"
                        android:text="穿衣指数：热"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/imagView5"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/imagView2"
                        android:gravity="center_horizontal"
                        android:text="湿度：80%"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>